<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.modelexecution.xmof.animationProvider" name="xMOF Representation Animation Provider" schema="schema/org.modelexecution.xmof.AnimationProvider.exsd"/>
   <extension
         id="org.xmof.addontest.AddonGroup1"
         name="XMOF- Addongroup"
         point="org.gemoc.gemoc_language_workbench.engine_addon_group">
      <AddonGroup
            Name="XMOF- Addongroup"
            id="org.xmof.addontest.AddonGroup1">
      </AddonGroup>
   </extension>
   <extension
         id="org.modelexecution.animationaddon"
         name="XMOF Animation- Addon"
         point="org.gemoc.gemoc_language_workbench.engine_addon">
      <Addon
            AddonGroupId="org.xmof.addontest.AddonGroup1"
            Class="org.modelexecution.xmof.animation.core.addon.ModelAnimator"
            Name="org.modelexecution.xmof.animation.addon.AnimationAddon"
            ShortDescription="Addon for animated debugging"
            id="org.modelexecution.xmof.animation.addon.AnimationAddon">
      </Addon>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
           <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=xdsmlGroup">
         <menu
               id="xmof.menu"
               label="xMOF">
            <command
                  commandId="org.modelexecution.xmof.animation.core.ui.PrepareForAnimatior"
                  label="Prepare for xMOF modelanimator"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                           <test
                                 property="org.eclipse.core.resources.name"
                                 value="*.xmof">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
              </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.modelexecution.xmof.animation.core.ui.command.PrepareForAnimatorCommand"
            commandId="org.modelexecution.xmof.animation.core.ui.PrepareForAnimatior">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.modelexecution.xmof.gemoc.ui.commands"
            name="xMOF commands">
      </category>
      <command
            categoryId="org.modelexecution.xmof.gemoc.ui.commands"
            description="Prepare xmof model files to be executable with the semantic model animator"
            id="org.modelexecution.xmof.animation.core.ui.PrepareForAnimatior"
            name="PrepareForAnimator">
      </command>
   </extension>


</plugin>
